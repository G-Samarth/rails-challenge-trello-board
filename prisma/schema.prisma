datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model List {
  id      String   @id @default(cuid())
  title   String
  cards   Card[]   @relation("ListCards")
}

model Card {
  id       String @id @default(cuid())
  content  String
  listId   String
  list     List   @relation("ListCards", fields: [listId], references: [id])
  position Int
}